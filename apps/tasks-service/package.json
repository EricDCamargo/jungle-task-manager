{
  "name": "@task/tasks-service",
  "version": "0.0.1",
  "description": "Aplication Tasks Service",
  "author": "Eric Dellai Camargo",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
